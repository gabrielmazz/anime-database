{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist-tests",
    "rootDir": ".",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "tests/**/*.ts",
    "src/utils/responsive.ts"
  ]
}
